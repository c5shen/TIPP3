# parameters can be set from main.config
# this is just an example file as the default configuration.
[basic]
refpkg_path      =
alignment_method =
placement_method =
pplacer_path     =
bscampp_path     =
blastn_path      =
witch_path       =

# default WITCH setup
[witch]
mode                    = witch-ng
num_hmms                = 1
use_weight              = True 
save_weight             = False
keep_decomposition      = False
bypass_setup            = True
alignment_size          = 10
alignment_upper_bound   = 1000

# default BSCAMPP setup
[bscampp]
backbonesize = 2000

# default pplacer-taxtastic setup
[pplacer-taxtastic]

# default BLAST setup
[blast]
threshold = 50

# refpkg settings, currently only used for excluding marker genes
[refpkg]
exclusion=FtsY_COG0552,RpoB_COG0085
